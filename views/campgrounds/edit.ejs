<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="mb-3 w-50">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %>">
                </div>
                <div class="mb-3 w-50">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        value="<%= campground.image %>">
                </div>
                <div class="mb-3 w-50">
                    <label class="form-label" for="price">Price</label>

                    <div class="input-group">
                        <span class="input-group-text" id="price">&#8377;</span>
                        <input type="text" class="form-control" name="campground[price]" id="price" aria-label="price"
                            placeholder="0.00" aria-describedby="price" value="<%= campground.price %>">
                    </div>
                </div>
                <div class="mb-3 w-50">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]"
                        id="description"><%= campground.description %></textarea>
                </div>
                <div class="mb-3 w-50">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campground.location %>">
                </div>
                <button class="btn btn-success mb-3" type="submit">Update Campground</button>
            </form>
            <a class="mb-3" href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
        </div>
    </div>